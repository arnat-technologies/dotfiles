{
  "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
  "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
  "workbench.startupEditor": "newUntitledFile",

  "workbench.statusBar.visible": true,
  "workbench.editor.enablePreview": false,

  "workbench.colorCustomizations": {
    "terminal.background": "#222222",
    "terminal.foreground": "#dddad6e7",
    "terminal.ansiBlack": "#1d2021f3",
    "terminal.ansiBrightBlack": "#665c54e3",
    "terminal.ansiBrightBlue": "#0d6678ef",
    "terminal.ansiBrightCyan": "#8ba59bec",
    "terminal.ansiBrightGreen": "#237e02ee",
    "terminal.ansiBrightMagenta": "#8f4673ee",
    "terminal.ansiBrightRed": "#fb553ff2",
    "terminal.ansiBrightWhite": "#fdf4c1ed",
    "terminal.ansiBrightYellow": "#fac13bed",
    "terminal.ansiBlue": "#00a2f9f1",
    "terminal.ansiCyan": "#8ba59bf8",
    "terminal.ansiGreen": "#95c085f2",
    "terminal.ansiMagenta": "#8f4673ec",
    "terminal.ansiRed": "#fb553ff5",
    "terminal.ansiWhite": "#a89984f4",
    "terminal.ansiYellow": "#fac13bf1"
  },

  "editor.rulers": [120],
  "editor.scrollBeyondLastLine": false,
  "editor.stablePeek": true,
  "editor.tabSize": 2,
  "editor.fontFamily": "Fira Code Retina",
  "editor.fontLigatures": true,
  "editor.fontSize": 11,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "window.title": "${rootName} ${dirty}${activeEditorLong}",
  "emmet.triggerExpansionOnTab": true,

  "files.exclude": {
    "**/.git": true,
    "**/package-lock.json": true,
    "**/.svn": true,
    "**/node_modules": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },
  "files.defaultLanguage": "markdown",
  "files.insertFinalNewline": true,
  "files.autoSave": "onFocusChange",
  "search.exclude": {
    "**/bower_components": true,
    "**/node_modules": true,
    "**/dist": true,
    ".conky/**": true,
    ".emacs.d/**": true,
    "gnome-shell/**": true,
    "mutt/**": true,
    "vagrant/**": true
  },

  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": false,

  "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",

  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "scss.lint.validProperties": ["composes"],
  "jest.shell": "/bin/zsh",
  "jest.jestCommandLine": "source ~/.zshrc",
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,

  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[html]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },

  "http.proxySupport": "on",
  "http.proxy": "https://gateway-bcp-pe.goskope.com",
  "http.proxyStrictSSL": false
}
